{ 
    // "parser":"barble-eslint",
    "parserOptions": {
        "ecmaVersion": 2020,
        "sourceType":"module",
        "ecmaFeatures": {            
            "jsx":true
        }
    },
    "env":{
        "browser": true,
        "node":true,
        "es6":true
    },    
    "extends": [
        // "airbnb",
        // "airbnb/hooks"
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react-hooks/recommended"
    ],
    "plugins": [
        "import",
        "react-hooks",
        "jsx-a11y"
    ],
    "rules": {
        "no-underscore-dangle":"off",
        "react-hooks/rules-of-hooks": "error",
        "react-hooks/exhaustive-deps": "warn",
        "no-unused-vars":"warn"
    }
}